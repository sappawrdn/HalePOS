<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F8F6F4" /> <!-- Warna latar belakang item menu -->
            <corners android:radius="12dp" /> <!-- Radius sudut -->
        </shape>
    </item>

    <!-- Border layer with rounded corners -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
              <!-- Warna dan ketebalan border -->
            <corners android:radius="12dp" /> <!-- Radius sudut yang sama dengan layer background -->
        </shape>
    </item>
</layer-list>