<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CBD2A4"/> <!-- Warna latar belakang -->
            <corners android:radius="20dp"/> <!-- Radius untuk sudut -->
        </shape>
    </item>

    <!-- Border layer -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <!-- Warna dan ketebalan border -->
            <corners android:radius="20dp"/> <!-- Radius yang sama untuk border -->
        </shape>
    </item>
</layer-list>
